	<!-- Checkout -->

	<div class="checkout">
		<div class="container">
			<div class="row">

				<!-- Billing Info -->
				<div class="col-lg-6">
					<div class="billing checkout_section">
						<div class="section_title">
Adresse de Facturation</div>
						<div class="section_subtitle">Entrez vos informations</div>
						<div class="checkout_form_container">
						 <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
							<!-- <form action="#" id="checkout_form" class="checkout_form"> -->
								<div class="row">
									<div class="col-xl-6">
										<!-- First Name -->
										Prénom*
										<%= f.text_field :first_name, id:"checkout_name", class:"checkout_input", required: true %>
									</div>
									<div class="col-xl-6 last_name_col">
										<!-- Last Name -->
										Nom de Famille*
										<%= f.text_field :last_name, id:"checkout_last_name", class:"checkout_input", required: true %>
									</div>
								</div>
								<div>
									<!-- Adresse -->
									Adresse*
									<%= f.text_field :adress, id:"checkout_address", class:"checkout_input", required: true %>
								</div>
								<div>
									<!-- Zipcode -->
									Code Postal*
									<%= f.text_field :zip_code, id:"checkout_zipcode", class:"checkout_input", required: true %>
								</div>
								<div>
									<!-- City / Town -->
									Ville*
									<%= f.text_field :city, id:"checkout_city", class:"checkout_input", required: true %>
								</div>
								<div>
									<!-- Phone no -->
									Numéro de Téléphone*
									<%= f.text_field :phone_number, id:"checkout_phone", class:"checkout_input", required: true %>
								</div>
								<div>
									<!-- Email -->
									Email*
									<%= f.text_field :email, id:"checkout_email", class:"checkout_input", required: true %>
								</div>

								<div class="field">
									<%= f.label :password %>
									<% if @minimum_password_length %>
									<em>(<%= @minimum_password_length %> characters minimum)</em>
									<% end %><br />
									<%= f.password_field :password, autocomplete: "new-password" %>
								</div>

								<div class="field">
									<%= f.label :password_confirmation %><br />
									<%= f.password_field :password_confirmation, autocomplete: "new-password" %>
								</div>

								<div class="actions">
									<%= f.submit "Sign up" %>
								</div>
								<% end %>
								<!-- </form> -->
						</div>
					</div>
				</div>

				<!-- Order Info -->

				<div class="col-lg-6">
					<div class="order checkout_section">
						<div class="section_title">Votre commande</div>
						<div class="section_subtitle">Détails de votre commande</div>
												<br><br><br><br>
						<!-- Order details -->
						<div class="order_list_container">
							<div class="order_list_bar d-flex flex-row align-items-center justify-content-start">
								<div class="order_list_title">Produit</div>
								<div class="order_list_value ml-auto">Prix</div>
							</div>
							<ul class="order_list">
								<li class="d-flex flex-row align-items-center justify-content-start">
									<div class="order_list_title">Cocktail Yellow dress</div>
									<div class="order_list_value ml-auto">$59.90</div>
								</li>
								<li class="d-flex flex-row align-items-center justify-content-start">
									<div class="order_list_title">Total</div>
									<div class="order_list_value ml-auto">$59.90</div>
								</li>
							</ul>
						</div>
						<br><br><br><br>
						<!-- Order Text -->
						<div class="order_text">
							N'oubliez pas de vérifier votre boite e-mail suite au paiement de votre commande, notamment la catégorie "SPAM".<br>	<br>
							N'hésitez pas à nous contacter pour toute question !</div>
					</div>
				</div>
			</div>
		</div>
	</div>
